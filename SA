import org.springframework.beans.factory.annotation.Value;
import org.springframework.boot.actuate.health.Health;
import org.springframework.boot.actuate.health.HealthEndpoint;
import org.springframework.boot.actuate.metrics.MetricsEndpoint;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RestController;

import java.util.LinkedHashMap;
import java.util.Map;
import java.util.concurrent.TimeUnit;

@RestController
public class SystemStatusController {

    private final HealthEndpoint healthEndpoint;
    private final MetricsEndpoint metricsEndpoint;

    @Value("${app.version:unknown}")
    private String appVersion;

    public SystemStatusController(HealthEndpoint healthEndpoint, MetricsEndpoint metricsEndpoint) {
        this.healthEndpoint = healthEndpoint;
        this.metricsEndpoint = metricsEndpoint;
    }

    @GetMapping("/system-status")
    public Map<String, Object> getSystemStatus() {
        Map<String, Object> result = new LinkedHashMap<>();

        // ✅ App version
        result.put("appVersion", appVersion);

        // ✅ Health info
        Health health = healthEndpoint.health();
        result.put("overallStatus", health.getStatus().getCode());

        if (health.getDetails().containsKey("db")) {
            Map<String, Object> db = (Map<String, Object>) health.getDetails().get("db");
            result.put("dbStatus", db.get("status"));
        }

        if (health.getDetails().containsKey("diskSpace")) {
            Map<String, Object> disk = (Map<String, Object>) health.getDetails().get("diskSpace");
            result.put("diskStatus", disk.get("status"));
            result.put("diskFree", disk.get("free"));
            result.put("diskTotal", disk.get("total"));
        }

        if (health.getDetails().containsKey("ping")) {
            Map<String, Object> ping = (Map<String, Object>) health.getDetails().get("ping");
            result.put("pingStatus", ping.get("status"));
        }

        // ✅ JVM & Metrics
        result.put("jvmMemoryUsed", extractFirstValue("jvm.memory.used"));
        result.put("jvmThreadsLive", extractFirstValue("jvm.threads.live"));
        result.put("cpuUsage", extractFirstValue("system.cpu.usage"));
        result.put("httpRequestCount", extractMeasurement("http.server.requests", "COUNT"));
        result.put("logEvents", extractMeasurement("logback.events", "COUNT"));

        // ✅ Uptime
        Double uptimeSeconds = (Double) extractFirstValue("process.uptime");
        result.put("uptimeSeconds", uptimeSeconds != null ? uptimeSeconds.longValue() : "N/A");
        result.put("uptimeFormatted", uptimeSeconds != null ? formatDuration(uptimeSeconds.longValue()) : "N/A");

        // ✅ Start time
        result.put("startTimeEpoch", extractFirstValue("process.start.time"));

        return result;
    }

    private Object extractFirstValue(String metricName) {
        MetricsEndpoint.MetricResponse response = metricsEndpoint.metric(metricName, null);
        if (response != null && !response.getMeasurements().isEmpty()) {
            return response.getMeasurements().get(0).getValue();
        }
        return null;
    }

    private Object extractMeasurement(String metricName, String statistic) {
        MetricsEndpoint.MetricResponse response = metricsEndpoint.metric(metricName, null);
        if (response != null && !response.getMeasurements().isEmpty()) {
            return response.getMeasurements().stream()
                    .filter(m -> m.getStatistic().name().equals(statistic))
                    .findFirst()
                    .map(MetricsEndpoint.Sample::getValue)
                    .orElse(null);
        }
        return null;
    }

    private String formatDuration(long seconds) {
        long days = TimeUnit.SECONDS.toDays(seconds);
        long hours = TimeUnit.SECONDS.toHours(seconds) % 24;
        long minutes = TimeUnit.SECONDS.toMinutes(seconds) % 60;
        long secs = seconds % 60;

        StringBuilder sb = new StringBuilder();
        if (days > 0) sb.append(days).append("d ");
        if (hours > 0) sb.append(hours).append("h ");
        if (minutes > 0) sb.append(minutes).append("m ");
        sb.append(secs).append("s");

        return sb.toString().trim();
    }
}



spring.jackson.time-zone=Asia/Hong_Kong
